{
  "extends": "./tsconfig.base",
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.spec.ts",
    "./src/**/__tests__/**/*.ts",
    "./src/**/*.spec.tsx",
    "./src/**/__tests__/**/*.tsx"
  ],
  "compilerOptions": {
    "outDir": "./dist"
  }
}
